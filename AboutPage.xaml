<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Aplicatia_Mobila.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="rezervare.jpg"
                  SemanticProperties.Description="Book your table!"
                  HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Book your table!" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app will help you to manage your table in restaurant" />
        <Label Text="Creators: Mesesan Daria-Maria and Maris Sorana" />

    </VerticalStackLayout>
</ContentPage>